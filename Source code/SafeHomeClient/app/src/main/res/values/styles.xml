<resources>
    <!-- Base application theme. -->
    <style name="SafeHomeTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/dark_grey</item>
        <item name="colorAccent">@color/bright_blue</item>
        <item name="colorButtonNormal">@color/light_grey</item>
        <item name="colorControlHighlight">@color/bright_blue</item>
        <item name="editTextColor">@color/dark_grey</item>
    </style>
    <style name="ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/light_blue</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleText</item>
    </style>
    <style name="ActionBarTitleText"
        parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/dark_grey</item>
    </style>
</resources>
