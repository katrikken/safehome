<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/row_padding_vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/row_padding_vertical"
    android:background="@color/clean_white">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_view_event"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true"
        android:layout_marginLeft="@dimen/padding_5pd"
        android:layout_marginRight="@dimen/padding_5pd"
        android:layout_marginTop="@dimen/padding_5pd"
        android:layout_marginBottom="@dimen/padding_5pd"
        app:cardBackgroundColor="@color/clean_white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_card_height">
            <TextView
                android:id="@+id/date"
                android:textSize="@dimen/text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"/>
            <TextView
                android:id="@+id/eventInfo"
                android:textSize="@dimen/text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/date"
                android:paddingStart="@dimen/padding_5pd"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>