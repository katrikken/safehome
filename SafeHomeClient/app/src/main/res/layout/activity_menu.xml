<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kuryshee.safehome.safehomeclient.MenuActivity"
    android:paddingLeft= "@dimen/activity_horizontal_margin"
    android:paddingRight = "@dimen/activity_horizontal_margin"
    android:paddingTop = "@dimen/activity_vertical_margin"
    android:paddingBottom = "@dimen/activity_vertical_margin"
    android:gravity="center">


    <EditText
        android:id="@+id/state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="none"
        android:text="The state is: "
        android:layout_marginTop = "50dp"
        android:focusable = "true"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentStart = "true"
        android:layout_centerHorizontal="true" />

    <Switch
        android:id="@+id/switchbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff="On"
        android:textOn="Off"
        android:layout_alignBaseline="@+id/state"
        android:layout_alignBottom="@+id/state"
        android:layout_toRightOf="@+id/state"
        />

    <Button
        android:id="@+id/picture"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Take a picture"
        android:layout_below="@+id/state"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/state"
        android:layout_alignEnd="@+id/state" />

    <Button
        android:id="@+id/history"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="View history"
        android:layout_below="@+id/picture"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/picture"
        android:layout_alignEnd="@+id/picture" />

    <Button
        android:id="@+id/download"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Download pictures"
        android:layout_below="@+id/history"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/history"
        android:layout_alignEnd="@+id/history" />

</RelativeLayout>
